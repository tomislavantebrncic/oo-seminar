@model IEnumerable<Model.MedicalFinding>

@{
    ViewBag.Title = "Index";
}

<h3>
    @Html.DisplayFor(model => model.ElementAt(0).Patient.FirstName)
    @Html.DisplayFor(model => model.ElementAt(0).Patient.LastName)
</h3>
<h4>
    @Html.DisplayFor(model => model.ElementAt(0).Patient.DateOfBirth)
</h4>
<h4>
    @Html.DisplayFor(model => model.ElementAt(0).Patient.OIB)
</h4>

<table class="table">
    <tr>
        <th>
            Datum
        </th>
        <th>
            Dijagnoza
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalDiagnosis.NameHRV) -
                @Html.DisplayFor(modelItem => item.MedicalDiagnosis.NameLAT)
            </td>
            <td>
                @Html.ActionLink("Detalji", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
