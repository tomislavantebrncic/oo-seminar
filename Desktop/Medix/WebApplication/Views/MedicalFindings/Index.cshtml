@model IEnumerable<Model.MedicalFinding>

@{
    ViewBag.Title = "Index";
}

<h3>
    @Html.DisplayFor(model => model.ElementAt(0).Patient.LastName),
    @Html.DisplayFor(model => model.ElementAt(0).Patient.FirstName)
</h3>
<div>
    <div style="float:left">
        <p>Datum rođenja: @Html.DisplayFor(model => model.ElementAt(0).Patient.DateOfBirth)</p>
        <p>OIB: @Html.DisplayFor(model => model.ElementAt(0).Patient.OIB)</p>
        <p>Identifikacijski broj pacijenta: @Html.DisplayFor(model => model.ElementAt(0).Patient.PatientID)</p>
    </div>
    <div style="float:right">
        <p>Adresa: @Html.DisplayFor(model => model.ElementAt(0).Patient.Address.Street)</p>
        <p style="float:right">
            @Html.DisplayFor(model => model.ElementAt(0).Patient.Address.City)
            @Html.DisplayFor(model => model.ElementAt(0).Patient.Address.Zipcode)
        </p>
    </div>
</div>



<table class="table">
    <tr>
        <th>
            Datum
        </th>
        <th>
            Dijagnoza
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalDiagnosis.NameHRV) -
                @Html.DisplayFor(modelItem => item.MedicalDiagnosis.NameLAT)
            </td>
            <td>
                @Html.ActionLink("Detalji", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
